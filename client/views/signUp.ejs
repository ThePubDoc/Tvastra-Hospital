    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <% include ./common/navbar %>

    <div class="signup-container">
        
        <script>
            var error = <%= err_msg %>;
            console.log(error)
            alert(error);
        </script>
        <form class="signup-form" method="POST" action="/signup"> 
            <div class="signup-form-container">
                <div class="signup-elements">
                    <p class="signup-header">Sign Up</p>
                    <input type="text" placeholder="Enter Name" name="name">
                    <div class="error">
                        <%  if(type === "email") %>
                        <%= err_msg %>
                    </div>
                    <input type="email" placeholder="Enter Email" name="email">
                    
                    <input type="password" placeholder="Enter Password" name="password">
                    <select class="gender" name="gender">
                        <option value="" disabled selected>Select Your Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <input type="date" placeholder="dd/mm/yyyy" name="dob">
                    <div class="error">
                        <%  if(type === "phone") %>
                        <%= err_msg %>
                    </div>
                    <input type="number" placeholder="Enter Phone no" name="phone">
                    <div class="address">
                        <input type="text" placeholder="Enter City" name="city">
                        <input type="text" placeholder="Enter State" name="state">
                    </div>
                    <select class="country" name="country">
                        <option value="" disabled selected>Select Your Country</option>
                        <option value="India">India</option>
                        <option value="Pakistan">Pakistan</option>
                    </select>
                    <input type="number" placeholder="Enter OTP">

                    <button class="signup-button">
                        <div><p>SIGN UP</p></div>
                        <div><i class="fas fa-arrow-right"></i></div>
                    </button>

                    <div class="signup-footer">
                        <p>Already a member?</p>
                        <a href="/login">Login</a>
                    </div>

                </div>
            </div>
        </form>
    </div>

    <% include ./common/footer %>
    
      
</body>
</html>