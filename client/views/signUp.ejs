    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar">

        <img src="../images/footer.png" alt="">
        
        <ul class="menu" id="menu">
            <li><a href="/doctor">Doctor</a></li>
            <li><a href="/hospital">Hospitals</a></li>
            <li><a href="#">Treatment</a></li>
            <li><a href="#">Other Services</a></li>
            <li><a href="#">About</a></li>
        </ul>

        <div class="menu-buttons">
            <button class="login">Login / Sign Up</button>
            <button class="quote">Get a Quote</button>
        </div>

        <div class="burger" id="burger" onclick="burgerMenu()">
            <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
    </nav>
    <div class="signup-container">
        
        <form class="signup-form" method="POST" action="/signup"> 
            <div class="signup-form-container">
                <div class="signup-elements">
                    <p class="signup-header">Sign Up</p>
                    <input type="text" placeholder="Enter Name" name="name">
                    <input type="email" placeholder="Enter Email" name="email">
                    <input type="password" placeholder="Enter Password" name="password">
                    <select class="gender" name="gender">
                        <option value="" disabled selected>Select Your Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <input type="date" placeholder="dd/mm/yyyy" name="dob">
                    <input type="number" placeholder="Enter Phone no" name="phone">
                    <div class="address">
                        <input type="text" placeholder="Enter City" name="city">
                        <input type="text" placeholder="Enter State" name="state">
                    </div>
                    <select class="country" name="country">
                        <option value="" disabled selected>Select Your Country</option>
                        <option value="India">India</option>
                        <option value="Pakistan">Pakistan</option>
                    </select>
                    <input type="number" placeholder="Enter OTP">

                    <button class="signup-button">
                        <div><p>SIGN UP</p></div>
                        <div><i class="fas fa-arrow-right"></i></div>
                    </button>

                    <div class="signup-footer">
                        <p>Already a member?</p>
                        <a href="/signup">Login</a>
                    </div>

                </div>
            </div>
        </form>
        <div id="signup-footer">
            <p> All Rights Reserved. &#169; tvastra 2020 </p>
        </div>
    </div>

    
      
</body>
</html>